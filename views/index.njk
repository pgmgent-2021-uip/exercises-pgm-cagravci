---
layout: base
title: Home
eleventyNavigation:
    key: Home
    order: 1
---

<h1 class="sr-only">My Walking App</h1>

<section class="hero row">
    <div class="hero__decoration col-8">
        <img
            class="hero__decoration__image"
            src="/assets/img/walkingpad.jpg"/>
    </div>

    <article class="hero__content col-4">
        <h2 class="lead-title--black">
            What do we offer?
        </h2>

        <ul class="hero__content__list">
            {% for hero_item in hero_list %}
                <li class="hero__content__list__item">
                    <small class="detail-title">{{ hero_item.small }}</small>

                    <strong class="base-title">{{ hero_item.title }}</strong>

                    <p class="hero__content__list__item__text">
                        {{ hero_item.subtitle }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </article>
</section>

{% if collections.features | length %}
    <section class="container">
        <h2>Features</h2>

        <ul class="cards-features">
            {% for feature in collections.features %}
                    <li class="">
                        <img 
                            class=""
                            src="{{ feature.data.img }}"/>
                        
                        <strong>{{ feature.data.title }}</strong>

                        <small>{{ feature.data.subtitle }}</small>

                        <a href="{{ feature.url }}" class="link">
                            {{ feature.data.title }}
                        </a>
                    </li>
            {% endfor %}
        </ul>
    </section>
{% endif %}

{% if quotes | length  %}
    <section class="container">
        <h2>Quotes</h2>

        <ul class="cards-quotes">
            {% for quote in quotes %}
                    <li class="">
                        <blockquote>
                            "{{ quote.quote }}"
                        </blockquote>
                        
                        <figcaption>
                            <img
                                src="/assets/img/{{ quote.img }}"
                                class=""/>
                            <p>~ {{ quote.author }}</p>
                        </figcaption>
                    </li>
            {% endfor %}
        <ul>
    </section>
{% endif %}

{% if customers | length  %}
    <section class="container">
        <h2>Klanten</h2>

        <ul class="cards-customers">
            {% for customer in customers %}
                    <li class="">
                        <a href="#">
                            <img 
                                src="/assets/img/{{ customer.img }}"/>
                        </a>
                    </li>
            {% endfor %}
        <ul>
    </section>
{% endif %}

{% if blogs | length  %}
    <section class="container">
        <h2>Blog</h2>

        <ul class="cards-posts">
            {% for blog in blogs %}
                    <li class="">
                        <img 
                            class=""
                            src="/assets/img/{{ blog.img }}"/>
                        
                        <strong>{{ blog.title }}</strong>

                        <small>{{ blog.subtitle }}</small>
                    </li>
            {% endfor %}
        <ul>
    </section>
{% endif %}