{% if blogs | length  %}
    <section class="container">
        <h2>Blogs</h2>

        <ul class="cards-posts">
            {% for blog in collections.blogs | highlight %}
                    <li class="">
                   
                 
                        <img 
                            class=""
                            src="/assets/img/{{ blog.data.img }}"/>
                        
                        <a href="{{ blog.url }}" >
                            <strong>{{ blog.data.title }}</strong>
                        </a>

                        <small>{{ blog.data.subtitle }}</small>

                        <a href="{{ blog.url }}" class="btn--more">
                            <strong>read more...</strong>
                        </a>

                    </li>
            {% endfor %}
        <ul>
    </section>
{% endif %}